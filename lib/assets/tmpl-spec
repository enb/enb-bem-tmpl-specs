        compare();

        function compare() {
            if (htmlDiffer.isEqual(expectedHtml, actualHtml)) {
                assert.ok(expectedHtml);
                done();
            } else {
                ${ saveHtml } && console.log('Result html is written to %j', htmlPath);
                assert.fail(actualHtml, expectedHtml, null, '\n');
            }
